<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
    <name>ESSvisualizer</name>
    <version>0.1.0</version>
    <description>Show output from Isaac ROS ESS</description>

    <author email="ashwinvk@nvidia.com">Ashwin Varghese Kuruttukulam</author>
    <maintainer email="ashwinvk@nvidia.com">Ashwin Varghese Kuruttukulam</maintainer>
    <license>MIT</license>

    <url type="website">https://developer.nvidia.com/isaac-ros</url>
    <url type="repository">https://github.com/rbonghi/isaac_roscon_demo</url>
    <url type="bugtracker">https://github.com/rbonghi/isaac_roscon_demo/issues</url>

   <test_depend>ament_copyright</test_depend>
   <test_depend>ament_flake8</test_depend>
   <test_depend>ament_pep257</test_depend>
   <test_depend>python3-pytest</test_depend>

   <exec_depend>rclpy</exec_depend>
   <exec_depend>std_msgs</exec_depend>
   <exec_depend>geometry_msgs</exec_depend>
   <exec_depend>sensor_msgs</exec_depend>

   <export>
      <build_type>ament_python</build_type>
   </export>
</package>